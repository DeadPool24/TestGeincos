@{
    ViewBag.Title = "Clientes - kiak";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kiak - Facturacion Electronica</title>
    <script src="~/Scripts/Vistas/Cliente/Nuevo.js"></script>
    <style>
        .cssClientes {
            border-left: 6px solid #1e88f3;
            font-size: small;
            height: 60px;
            overflow-y: scroll;
        }

            .cssClientes:hover {
                border-left: 6px solid #00ff21;
            }

        @@media only screen and (max-width: 600px) {
            .cssClientes {
                height: 120px;
                font-size: xx-small;
            }
        }
    </style>
</head>
<body>
    <div class="row">
        @Html.Partial("_Options")
        <div class="panel panel-default">
            <div class="panel-heading">
                Alumnos registrados <i class="fa fa-users"></i>
            </div>
            <div class="panel-body" style="height:445px; overflow-y:scroll;">
                <span id="total-Alumnos"></span>
                <div class="table-responsive">
                    <table class="table-responsive table-bordered table-hover table-striped table-condensed" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Nombres y apellidos</th>
                                <th>Dni</th>
                                <th>Nivel</th>
                                <th>Seccion</th>
                                <th>Apoderado</th>
                                <th>Correo</th>
                                <th><i class="fa fa-pencil"></i></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" role="dialog" id="md-Nuevo" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <button class="close" data-dismiss="modal">&times;</button>
                    <h5 id="titleModal"></h5>
                </div>
                <div class="panel-body">
                   
                </div>
                <div class="panel-footer">
                    <button class="btn btn-success" onclick="AddCliente()"><i class="fa fa-save"></i> Guardar</button>
                    <button class="btn btn-danger" data-dismiss="modal"><i class="fa fa-close"></i> Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("Spinner")
</body>
</html>

@{
    ViewBag.Title = "Cursos - Geincos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/Vistas/Curso/Index.js"></script>
    <title>Cursos</title>
</head>
<body>
    <div class="row">
        @Html.Partial("_Options")
        <div class="panel panel-default">
            <div class="panel-heading">
                Cursos registrados <i class="fa fa-bar-chart"></i>
            </div>
            <div class="panel-body" style="height:445px; overflow-y:scroll;">
                <span id="total-Alumnos"></span>
                <div class="table-responsive">
                    <table class="table-responsive table-bordered table-hover table-striped table-condensed" id="tablaCurso" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Curso</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody id="body-Curso"></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" role="dialog" id="md-Nuevo" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <button class="close" data-dismiss="modal">&times;</button>
                    <h5 id="titleModal"></h5>
                </div>
                <div class="panel-body">
                    <div class="form-group-sm">
                        <div class="col-md-12">
                            <label>Curso:</label>
                            <input class="hidden" id="text-Id" />
                            <input class="form-control" id="text-Curso" />
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-success" onclick="AgregarCurso()"><i class="fa fa-save"></i> Guardar</button>
                    <button class="btn btn-danger" data-dismiss="modal"><i class="fa fa-close"></i> Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("Spinner")
</body>
</html>

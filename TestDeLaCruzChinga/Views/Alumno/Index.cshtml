@{
    ViewBag.Title = "Clientes - kiak";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Alumnos</title>
    <script src="~/Scripts/Vistas/Alumno/Index.js"></script>
</head>
<body>
    <div class="row">
        @Html.Partial("_Options")
        <div class="panel panel-default">
            <div class="panel-heading">
                Alumnos registrados <i class="fa fa-users"></i>
            </div>
            <div class="panel-body" style="height:445px; overflow-y:scroll;">
                <span id="total-Alumnos"></span>
                <div class="table-responsive">
                    <table class="table-responsive table-bordered table-hover table-striped table-condensed" id="tablaAlumno" style="width:100%;">
                        <thead>
                            <tr>
                                <th class="text-center">Nombres y apellidos</th>
                                <th class="text-center">Dni</th>
                                <th class="text-center">Nivel</th>
                                <th class="text-center">Seccion</th>
                                <th class="text-center">Apoderado</th>
                                <th class="text-center">Correo</th>
                                <th class="text-center">Opciones</th>
                            </tr>
                        </thead>
                        <tbody id="body-Alumno">
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" role="dialog" id="md-Nuevo" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <button class="close" data-dismiss="modal">&times;</button>
                    <h5 id="titleModal"></h5>
                </div>
                <div class="panel-body">
                    <div class="form-group-sm">
                        <div class="col-md-3">
                            <label>Dni:</label>
                            <input class="form-control" id="text-Dni" />
                        </div>
                        <div class="col-md-2" style="padding-top:23px;">
                            <button class="btn btn-success btn-sm">Reniec</button>
                        </div>
                        <div class="col-md-7">
                            <label>Nombres:</label>
                            <input class="hidden" id="text-Id" />
                            <input class="form-control" id="text-Nombres" />
                        </div>
                        <div class="col-md-6">
                            <label>Apellido paterno:</label>
                            <input class="form-control" id="text-Apepat" />
                        </div>
                        <div class="col-md-6">
                            <label>Apellido materno:</label>
                            <input class="form-control" id="text-Apemat" />
                        </div>
                        <div class="col-md-12">
                            <label>Correo Electronico:</label>
                            <input class="form-control" id="text-Correo" />
                        </div>
                        <div class="col-md-3">
                            <label>Dni Apoderado:</label>
                            <input class="form-control" id="text-DniApo" />
                        </div>
                        <div class="col-md-2" style="padding-top:23px;">
                            <button class="btn btn-success btn-sm">Reniec</button>
                        </div>
                        <div class="col-md-12">
                            <label>Apoderado:</label>
                            <input class="form-control" id="text-Apoderado" />
                        </div>
                        <div class="col-md-6">
                            <label>Telefono Emergencia:</label>
                            <input class="form-control" id="text-Telf" />
                        </div>
                        <div class="col-md-6">
                            <label>Nivel:</label>
                            <select class="form-control" id="cmb-Nivel">
                                <option value="I">Inicial</option>
                                <option value="P">Primaria</option>
                                <option value="S">Secundaria</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label>Seccion:</label>
                            <select class="form-control" id="cmb-Seccion">
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-success" onclick="AgregarAlumno()"><i class="fa fa-save"></i> Guardar</button>
                    <button class="btn btn-danger" data-dismiss="modal"><i class="fa fa-close"></i> Cancelar</button>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("Spinner")
</body>
</html>
